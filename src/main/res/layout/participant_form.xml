<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/participant_form"
    android:background="@android:color/white">

    <include layout="@layout/dialog_header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/participant_id"
        android:id="@+id/textView"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/participant_id_value"
        android:ems="10"
        android:hint="@string/participant_id"
        android:textColor="@android:color/black"
        android:inputType="textAutoComplete"/>

    <include layout="@layout/member_form"
         android:layout_marginTop="-20dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"/>

</LinearLayout>