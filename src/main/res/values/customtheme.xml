<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomTheme.ActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomTheme.OverFlowButton</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CustomTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/CustomTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="CustomTheme.OverFlowButton" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu</item>
    </style>

    <style name="CustomTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#008148</item>
    </style>
</resources>